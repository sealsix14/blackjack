<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ood.blackjack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ood.blackjack.UI"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ood.blackjack.ViewScores"
            android:label="@string/title_activity_view_scores"
            android:parentActivityName="com.ood.blackjack.UI" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ood.blackjack.UI" />
        </activity>
        <activity
            android:name="com.ood.blackjack.GameUI"
            android:label="@string/title_activity_game_ui"
            android:parentActivityName="com.ood.blackjack.UI" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ood.blackjack.UI" />
        </activity>
        <activity
            android:name="com.ood.blackjack.About"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.ood.blackjack.UI" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ood.blackjack.UI" />
        </activity>
    </application>

</manifest>